@model ML.Empleado
@{
    ViewData["Title"] = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Formulario</h1>
        </div>
    </div>

    @using (@Html.BeginForm("Formulario", "Empleado", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.IdEmpleado)
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.ApellidoPaterno, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.ApellidoMaterno, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(model => model.FechaNacimiento, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.FechaNacimiento, "{0:yyyy/MM/dd}", new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.RFC, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.RFC, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.NSS, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.NSS, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(model => model.CURP, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.CURP, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.FechaIngreso, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.FechaIngreso, "{0:yyyy/MM/dd}", new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.SalarioBase, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.SalarioBase, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.NoFaltas, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.NoFaltas, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.Departamento.IdDepartamento, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Departamento.IdDepartamento, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <a href="@Url.Action("GetAll", "Empleado")" class="btn btn-danger w-100">Regresar</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success w-100">Guardar</button>
            </div>
        </div>
    }

</div>




